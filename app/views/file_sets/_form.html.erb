<%= form_for(@file_set) do |f| %>
  <% if @file_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@file_set.errors.count, "error") %> prohibited this file_set from being saved:</h2>

      <ul>
      <% @file_set.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :path %><br>

    <!--We don't allow changing the file_set so if exists, just display.-->
    <% if @file_set.path? %>
      <%= @file_set.path.file.identifier %>
    <% else %>
      <%= f.file_field :path %>
      <%= f.hidden_field :path_cache %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
