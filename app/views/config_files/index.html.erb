<h1>Listing config_files</h1>

<%= search_form_for @q do |f| %>
  <%= f.label "Search" %>
  <%= f.search_field :name_or_description_or_diffs_title_or_diffs_description_cont %>

  <%= f.submit "search" %>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q,:name, 'Name')%></th>
      <th><%= sort_link(@q,:description,'Description')%></th>
      <th><%= sort_link(@q,'cf','Config File')%></th>
      <th>Used in Diff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @config_files.each do |config_file| %>
      <tr>
        <td><%= config_file.name %></td>
        <td><%= config_file.description %></td>
        <td><%= config_file.cf_file_name %></td>
        <td>
          <% config_file.diffs.each do |diff| %>
            <%= diff.title %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', config_file %></td>
        <td><%= link_to 'Edit', edit_config_file_path(config_file) %></td>
        <td><%= link_to 'Destroy', config_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Config file', new_config_file_path %>
