<h1>Listing diffs</h1>

<%= search_form_for @q do |f| %>
  <%= f.label "Search" %>
  <%= f.search_field :title_or_description_or_config_file_name_or_right_file_set_name_or_left_file_set_name_cont %>

  <%= f.submit "search" %>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q,:title, 'Title')%></th>
      <th><%= sort_link(@q,:description,'Description')%></th>
      <th><%= sort_link(@q,:config_file,'Config File')%></th>
      <th><%= sort_link(@q,'left_file_set.name','Left File Set')%></th>
      <th><%= sort_link(@q,'right_file_set.name','Right File Set')%></th>
      <th><%= sort_link(@q,'results.updated_at','Last Result') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diffs.each do |diff| %>
      <tr>
        <td><%= diff.title %></td>
        <td><%= diff.description %></td>
        <td><%= diff.config_file.name %></td>
        <td><%= diff.left_file_set.name %></td>
        <td><%= diff.right_file_set.name %></td>
        <td>
          <% if diff.results.first.nil? %>
            &nbsp;
          <% else %>
            <%= diff.results.first.updated_at.localtime.strftime("%F %T %Z") %>
            (<%= diff.results.first.pct_complete %>%)
          <% end %>
        </td>
        <td><%= link_to 'Show', diff %></td>
        <td><%= link_to 'Edit', edit_diff_path(diff) %></td>
        <td><%= link_to 'Destroy', diff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

