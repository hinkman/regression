<h1>Listing config_files</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @config_files.each do |config_file| %>
      <tr>
        <td><%= config_file.name %></td>
        <td><%= config_file.description %></td>
        <td><%= config_file.path.file.identifier %></td>
        <td><%= link_to 'Show', config_file %></td>
        <td><%= link_to 'Edit', edit_config_file_path(config_file) %></td>
        <td><%= link_to 'Destroy', config_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

